@model MailMeBilling.Models.Allcredit

@{
    ViewData["Title"] = "Vendor CreditNote list";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int con = 0;
}




<div class="card text-left">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h4 class="card-title mb-3"><b> Credit Note</b></h4>
                <p>Vendor Credit Note List</p>
            </div>
            <div class="col-2">
                <p class="text-right">
                    <a asp-action="Create" class="btn btn-primary">Add Credit</a>
                </p>
            </div>
        </div>


        <div class="table-responsive">
            <table class="display table table-striped table-bordered" id="zero_configuration_table" style="width:100%">
                <thead>

                    <tr>
                        <th>
                            Bill.No
                        </th>
                        <th>
                            Date
                        </th>

                        <th>
                            Reson
                        </th>
                        <th>
                            PaymentType
                        </th>
                        <th>
                            Ref.No
                        </th>
                        <th>
                            Total Amount
                        </th>
                        <th>
                            Paid
                        </th>
                        <th>
                            Balance
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Mobile
                        </th>

                        <th style="width:70px;">Action</th>
                    </tr>


                </thead>

                <tbody>
                    @foreach (var item in Model.creditnotes)
                    {
                        con++;
                        <tr>
                            <td>
                              (C)  @Html.DisplayFor(modelItem => item.cid)
                            </td>
                            <td style="width:100px">
                                @Html.DisplayFor(modelItem => item.cdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.person)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.particular)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.paymenttype)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.refno)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.totalamount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.mobilenumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.address)
                            </td>
                            <td>
                                <a class=" nav-icon mr-2 i-Pen-2" asp-action="cCreditustomerpayment" asp-controller="MyReports" asp-route-id="@item.cid" asp-route-mob="@item.mobilenumber"></a>
                                <a class="nav-icon mr-2 i-Information" asp-action="Details" asp-route-id="@item.cid"></a>
                                <a class="nav-icon mr-2 i-Close" asp-action="Delete" asp-route-id="@item.cid"></a>
                            </td>
                        </tr>
                    }

                    @foreach (var item in Model.purchaseinvoicesummeries)
                    {
                        con++;
                        <tr>
                            <td>
                              (P)  @Html.DisplayFor(modelItem => item.Billid)
                            </td>
                            <td style="width:100px">
                                @Html.DisplayFor(modelItem => item.Billdate)
                            </td>

                            <td>
                               Purchase
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Paymenttype)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Refcode)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Totalamount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.paid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vendorrname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mobilenumber)
                            </td>

                            <td>
                                <a asp-controller="MyReports" asp-action="Vendorpayment" asp-route-id="@item.Mobilenumber" class="btn btn-primary">Pay</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>