@model IEnumerable<MailMeBilling.Models.Product>

@{
    ViewData["Title"] = " Product List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="card text-left">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h4 class="card-title mb-3"><b>Product List</b></h4>
                <p>All  Productdetail list here..</p>
            </div>
            <div class="col-2">
                <p class="text-right">
                    <a asp-action="Create" class="btn btn-primary">Add Product</a>
                </p>
            </div>
        </div>


        <div class="table-responsive">
            <table class="display table table-striped table-bordered" id="zero_configuration_table" style="width:100%">
                <thead>
                    <tr class="text-center">
                        <th>
                            @Html.DisplayNameFor(model => model.productimage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.productname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubcCategory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Color)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Brand)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hsncode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Purchaserate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Salesrate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stock)
                        </th>



                        <th>ACTION</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        string imageBase64 = Convert.ToBase64String(item.productimage);
                        string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                       
                    <tr class="text-center">
                        <td >

                            <img src="@imageSrc" style="width:50px;height:30px; " data-toggle="modal" data-target=".A-@item.productid" />

                            <!--Modal -->
                            <div class="modal fade bd-example-modal-lg A-@item.productid" id="" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalCenterTitle">@item.productname</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <img src="@imageSrc" style="width:auto;height:auto;" />

                                        </div>
                                        <div class="modal-footer">

                                            <button class="btn btn-primary ml-2" type="button" data-dismiss="modal"> Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal -->
                        </td>

                       
                        <td>
                            @Html.DisplayFor(modelItem => item.productname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubcCategory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hsncode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Purchaserate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salesrate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.stock)
                        </td>


                        <td>
                            <a asp-action="Edit" asp-route-id="@item.productid">Update</a> |
                            <a asp-action="Details" asp-route-id="@item.productid">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.productid">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>

            </table>

           
        </div>
    </div>
</div>