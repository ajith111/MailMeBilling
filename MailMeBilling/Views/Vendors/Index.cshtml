@model IEnumerable<MailMeBilling.Models.Vendor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobilenumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bankname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accountnumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ifsccode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bankbranch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobilenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bankname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accountnumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ifsccode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bankbranch)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.vendorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.vendorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.vendorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
