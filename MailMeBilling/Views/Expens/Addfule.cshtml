@model MailMeBilling.Models.Expens

@{
    ViewData["Title"] = "Add fule";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



    <h4> Add fuel Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="Fule" asp-for="reason" />
            <div class="form-group">
                <label asp-for="reason" class="control-label"></label>

                <select asp-for="reason" class="form-control" required>
                    <option value=""> Select Type of Fuel</option>
                    <option value="(Fule)Company">Company</option>
                    <option value="(Fule)unoffical">Unoffical</option>
                </select>
                <span asp-validation-for="ftype" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="fulestation" class="control-label"></label>
                <input asp-for="fulestation" class="form-control" required />
                <span asp-validation-for="fulestation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ftype" class="control-label"></label>

                <select asp-for="ftype" class="form-control" required>
                    <option value="Petrol">Petrol</option>
                    <option value="Disel">Disel</option>
                </select>
                <span asp-validation-for="ftype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="regno" class="control-label"></label>
                <input asp-for="regno" class="form-control" required />
                <span asp-validation-for="regno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

