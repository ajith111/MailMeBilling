@model MailMeBilling.Models.Expens

@{
    ViewData["Title"] = "Add Expens";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



    <h4> Add Pantry Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="reason" class="control-label"></label>
               
            <select asp-for="reason" class="form-control" required>
                <option value="">Select Reason of Expense</option>
               
                <option value="(Pantry)Tea"> Tea</option>
                <option value="(Pantry)Coffe">Coffe</option>
                <option value="(Pantry)Juice">Juice</option>
                <option value="(Pantry)Snacks">Snacks</option>
               
            </select>
                <span asp-validation-for="reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" required />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

