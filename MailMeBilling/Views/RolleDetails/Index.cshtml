@model IEnumerable<MailMeBilling.Models.RolleDetails>

@{
    ViewData["Title"] = "Role List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int count = 0;
}

    <div class="card text-left">
        <div class="card-body">
            <div class="row">
                <div class="col-10">
                    <h4 class="card-title mb-3"><b>Role List</b></h4>
                    <p>All  Role detail list here..</p>
                </div>
                <div class="col-2">
                    <p class="text-right">
                        <a asp-action="Create" class="btn btn-primary">Add Role</a>
                    </p>
                </div>
            </div>         
          

            <div class="table-responsive">
                <table class="display table table-striped table-bordered" id="zero_configuration_table" style="width:100%">
                    <thead>
                        <tr class="text-center">
                            <th>S.No</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DOB)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mobilenumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Branch)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Roll)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>

                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                        <tr class="text-center">
                            <td>
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DOB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mobilenumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Branch)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Roll)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>

                            <td>
                                <a class=" nav-icon mr-2 i-Pen-2" asp-action="Edit" asp-route-id="@item.Employeeid"></a> 
                                <a class="nav-icon mr-2 i-Information" asp-action="Details" asp-route-id="@item.Employeeid"></a> 
                                <a class=" nav-icon mr-2 i-Close" asp-action="Delete" asp-route-id="@item.Employeeid"></a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    
    
    