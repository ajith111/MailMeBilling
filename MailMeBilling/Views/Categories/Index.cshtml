@model IEnumerable<MailMeBilling.Models.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var count = 0;
}

<div class="col-md-12 mb-3">
    <div class="card text-left">
        <div class="card-body">
            <h4 class="card-title mb-3">Category List</h4><br />
            <p>
                <a class="btn btn-primary" asp-action="Create">Add Category</a>
            </p>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="text-center">
                            <th scope="col">S.No</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Categorys)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Categorydiscription)
                            </th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr class="text-center">
                                <th scope="row">@count</th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categorys)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categorydiscription)
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.categoryid">Edit</a>
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.categoryid">Details</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.categoryid">Delete</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

