@model IEnumerable<MailMeBilling.Models.Color>

@{
    ViewData["Title"] = "COLOR LIST";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int count = 0;

}

    <div class="col-md-12 mb-3">
        <div class="card text-left">
            <div class="card-body">
                <h4 class="card-title mb-3">Color List</h4><br />
                <p>
                    <a class="btn btn-primary" asp-action="Create">Add Color</a>
                </p>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">S.No</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Colors)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Colorsdscription)
                                </th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr class="text-center">
                                    <th scope="row">@count</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Colors)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Colorsdscription)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Colorid">Edit</a>
                                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Colorid">Details</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Colorid">Delete</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>