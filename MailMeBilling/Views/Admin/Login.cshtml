@model MailMeBilling.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet">
    <link href="~/dist-assets/css/themes/lite-purple.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/dist-assets/images/logo.png" />
</head>

<body class="text-left">
    <div class="auth-layout-wrap" style="background-image: url(../../dist-assets/images/100.jpg)">

        <div class="auth-content">
            <div class="card o-hidden">
                <form asp-controller="Admin" asp-action="Admin_login" method="post">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6 col-md-4">
                            <div class="p-4">
                                <div class="auth-logo text-center mb-4">

                                    <img src="~/dist-assets/images/logo.png" style="height:150px; width:150px;">
                                </div>
                                <h1 class="mb-3 text-18 text-center">Sign In</h1>
                                @*<div>Error =  @ViewBag.error</div>*@


                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Userid" class="control-label"></label>
                                    <input asp-for="Userid" value="" class="form-control form-control-rounded" />
                                    <span asp-validation-for="Userid" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" value="" type="password" class="form-control form-control-rounded" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>



                                <button id="btnsubmit" type="submit" class="btn btn-rounded btn-primary btn-block mt-2">SignIn</button>


                                <div class="mt-3 text-center">
                                    @*<a href="forgot.html" class="text-muted"><u>Forgot Password?</u></a>*@
                                </div>



                            </div>
                        </div>
                        <div class="col-md-3"></div>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/dist-assets/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="~/dist-assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/dist-assets/js/es5/script.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
